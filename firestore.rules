rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }

    // Helper function to check if user owns the resource
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }

    // Users collection - main user data
    match /users/{userId} {
      // Allow read/write if authenticated user owns this document
      allow read, write: if isOwner(userId);

      // Private subcollection - AI Settings (API keys, etc.)
      match /private/{document=**} {
        // Only the owner can read/write their private data
        allow read, write: if isOwner(userId);
      }

      // AI Question Cache subcollection
      match /aiQuestionCache/{questionId} {
        // Only the owner can read/write their cached questions
        allow read, write: if isOwner(userId);
      }
    }

    // Deny all other access by default
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
